scss:
  $tooltip-bg-color: rgba(0, 0, 0, 0.8);
  $arrow-size: 5px;
  .tooltip {
    position: relative;
    display: inline-block;
    padding-right: 10px;
    .tooltip-content {
      display: inline-block;
      background-color: $tooltip-bg-color;
      color: white;
      padding: 5px;
      border-radius: 4px;

      &:hover {
        box-shadow: 0px 0px 20px 0px $tooltip-bg-color;
      }

      transition: all 0.2s;
    }

    .tooltip-arrow {
      display: inline-block;
      border-width: $arrow-size;
      border-style: solid;
      border-left-color: $tooltip-bg-color;
      border-top-color: transparent;
      border-right-color: transparent;
      border-bottom-color: transparent;

      position: absolute;
      margin-top: -5px;
      top: 50%;
      right: -5px;
    }
  }
