scss:
  p {
    color: blue;
  }

  .slogan {
    display: inline-block;
  }

  .login-button {
    display: inline-block;
    padding: 7px 20px;
    background-color: #3f89ec;
    border-radius: 2px;
    cursor: pointer;
  }

  @mixin fixed {
    box-sizing: border-box;
    padding: 30px;
    position: fixed;
    width: 100%;
    height: 100px;
    text-align: center;
    color: white;
    font-size: 26px;
    // line-height 默认值是 normal，不等于 1 或 1em。
    line-height: 1;

    *:not(:last-child) {
      margin-right: 10px;
    }
  }

  #fixed-top {
    @include fixed;
    top: 0;
    left: 0;
    background-color: black;
    opacity: 0.8;
    filter: alpha(opacity=80);
    font-family: 'Hiragino Sans GB', sans-serif;
  }

  #fixed-bottom {
    @include fixed;
    bottom: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.8);
    font-family: 'STHeiti', sans-serif;
  }
