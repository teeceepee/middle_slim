.outer
  .inner

.middle-line

scss:
  .outer {
    position: relative;
    max-width: 500px;
    height: 200px;
    margin: auto;
    border: 1px dotted gray;

    .inner {
      position: absolute;
      left: 50%;
      bottom: 0;
      transform: translate(-50%, 50%);

      width: 50px;
      height: 50px;
      background-color: teal;
      border-radius: 50%;
    }
  }

  .middle-line {
    position: fixed;
    left: 50%;
    top: 0;
    transform: translate(-50%);

    width: 2px;
    height: 100%;
    background-color: black;

    z-index: -1;
  }
