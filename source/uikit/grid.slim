h2 Responsive Width

/.uk-grid data-uk-grid-margin=""
.uk-grid
  .uk-width-medium-1-2.uk-width-large-1-3
    .uk-panel.uk-panel-box.uk-panel-box-primary
      code .uk-width-medium-1-2
      code .uk-width-large-1-3
  .uk-hidden-medium.uk-width-large-1-3
    .uk-panel.uk-panel-box
      code .uk-hidden-medium
      code .uk-width-large-1-3
  .uk-width-medium-1-2.uk-width-large-1-3
    .uk-panel.uk-panel-box.uk-panel-box-primary
      code .uk-width-medium-1-2
      code .uk-width-large-1-3

/.uk-grid data-uk-grid-margin=""
.uk-grid
  .uk-width-medium-1-3.uk-width-1-2
    .uk-panel.uk-panel-box.uk-panel-box-secondary
      code .uk-width-1-2
      code .uk-width-medium-1-3
  .uk-width-medium-1-3.uk-hidden-small
    .uk-panel.uk-panel-box
      code .uk-hidden-small
      code .uk-width-medium-1-3
  .uk-width-medium-1-3.uk-width-1-2
    .uk-panel.uk-panel-box.uk-panel-box-secondary
      code .uk-width-1-2
      code .uk-width-medium-1-3

/.uk-grid data-uk-grid-margin=""
.uk-grid
  .uk-width-1-1.uk-visible-small
    .uk-panel.uk-panel-box.uk-panel-box-secondary
